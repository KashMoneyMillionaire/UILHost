@model UILHost.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    //Layout = "~/Views/Shared/_Login.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form", name = "login", id = "login" }))
{
    @Html.AntiForgeryToken()

    <div class="row">

        <div class="signin-form-container">

            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger", data_placement = "left" })

            <div class="form-group">
                <label class="ie" for="exampleInputEmail1">Email address</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", type = "email", name = "email", placeholder = "Enter email", required = "required", autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "dynamic-alert-container" })
                @*@Html.ValidationMessageFor(m => m.UserName)*@
            </div>

            <div class="form-group">
                <label class="ie" for="exampleInputPassword1">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", type = "password", name = "password", placeholder = "Password", required = "required" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "dynamic-alert-container" })
                @*@Html.ValidationMessageFor(m => m.Password)*@
            </div>

            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <div class="login-btn-container">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>

            <div class="forgot-password-container">
                <span class="forgot-password">@Html.ActionLink("Forgot your password? ", MVC.Account.ForgotPasswordRequest())</span>
            </div>


        </div>

    </div><!-- END row -->

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}